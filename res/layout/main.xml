<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_button"
            android:id="@+id/phoneButton" android:layout_row="0"
            android:layout_column="0" android:layout_columnSpan="3"
            android:typeface="serif"/>
    <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="@string/server"
            android:id="@+id/textView" android:layout_row="1"
            android:layout_column="0"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center" android:layout_columnSpan="2"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" android:layout_row="1"
            android:layout_column="2" android:checked="false"
            android:layout_gravity="right"/>
    <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="@string/data"
            android:id="@+id/textView1" android:layout_row="2"
            android:layout_column="0" android:typeface="serif"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="@string/data_sms"
            android:id="@+id/textView2" android:layout_row="3"
            android:layout_column="1" android:gravity="center_vertical"
            android:typeface="serif"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_data"
            android:id="@+id/textView3" android:layout_row="4"
            android:layout_column="1" android:layout_gravity="center"
            android:typeface="serif"/>
    <RadioGroup
            android:id="@+id/dataRadioGroup"
            android:layout_width="74dp"
            android:layout_height="wrap_content" android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="right" android:layout_rowSpan="2">
        <RadioButton
                android:id="@+id/dataSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" android:layout_gravity="right"/>

        <RadioButton
                android:id="@+id/dataData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>
    </RadioGroup>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/launch_example"
            android:id="@+id/launchTextView" android:layout_row="5"
            android:layout_column="0"
            android:typeface="serif"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_columnSpan="3"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/launch_example_button"
            android:id="@+id/launchButton" android:layout_row="6"
            android:layout_column="0"
            android:typeface="serif"
            android:layout_gravity="center_horizontal"
            android:clickable="true" android:layout_columnSpan="3"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pingButton"
            android:id="@+id/pingButton" android:layout_row="7"
            android:layout_column="0" android:layout_columnSpan="3"/>
</GridLayout>