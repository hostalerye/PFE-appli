<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" android:layout_row="0"
            android:layout_column="2" android:checked="false"
            android:layout_gravity="right"/>
    <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="Rendre disponible"
            android:id="@+id/textView" android:layout_row="0"
            android:layout_column="0"
            android:textStyle="bold"
            android:phoneNumber="false" android:typeface="serif"
            android:layout_columnSpan="2" android:gravity="center"/>
    <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="DonnÃ©es :"
            android:id="@+id/textView1" android:layout_row="1"
            android:layout_column="0" android:typeface="serif"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="SMS"
            android:id="@+id/textView2" android:layout_row="2"
            android:layout_column="1" android:gravity="center_vertical"
            android:typeface="serif"
            android:layout_gravity="center_horizontal"/>
    <RadioGroup
            android:layout_width="74dp"
            android:layout_height="wrap_content" android:layout_row="2"
            android:layout_column="2" android:layout_rowSpan="2"
            android:layout_gravity="right">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" android:layout_gravity="right"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>
    </RadioGroup>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:id="@+id/textView3" android:layout_row="3"
            android:layout_column="1" android:layout_gravity="center"
            android:typeface="serif"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lancer un calcul :"
            android:id="@+id/textView4" android:layout_row="4"
            android:layout_column="0" android:layout_columnSpan="3"
            android:typeface="serif"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afficher liste des calculs disponibles"
            android:id="@+id/button" android:layout_row="5"
            android:layout_column="0" android:layout_columnSpan="3"
            android:typeface="serif"
            android:layout_gravity="center_horizontal"/>
</GridLayout>